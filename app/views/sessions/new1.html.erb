    <style>
        body {
            background-color: #444;
            margin: 0;
        }    
        #wrapper {
             width: 1005px;
             margin: 0 auto;
        }
        #leftcolumn, #rightcolumn {
            float: left;
            min-height: 450px;
            color: white;
        }
        #leftcolumn {
             width: 750px;
             background-color: #777;
        }
        #rightcolumn {
              border: 1px solid white;
             width: 200px;
             background-color: #777;
             float:right;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
